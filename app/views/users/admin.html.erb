
<div id="header">
<div align="center">
    <h1>Hello <%= @sessName  %></h1>
    <h2>Welcome to the Admin page.</h2>
    
</div>
</div>

<div align="center">

<table>
	<thead>
		<tr>
			<th>Username</th>
			<th>Email</th>
			<th>Admin?</th>
		</tr>
	</thead>
	
	<% @users.each do |user| %>
		<tr>
			<td><%= user.username %></td>
			<td><%= user.email %></td>
			<td>
			<% if user.isadmin %>
				Yes
			<% else %>
				No
			<% end %>
			</td>
			<% if user.isadmin%>
				<td><%= link_to 'Show', user %></td>
			<% else %>
				<td><%= link_to 'Show', user %></td>
				<td><%= link_to 'Make Admin', edit_user_path(user) %></td>
				<td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			<% end %>
  </tr>
<% end %>
</table>
</table>
<br />
<br />

<a href="/"><button type='button'>Home</button></a>
</div>