<div id="userpage">
    <div id="header">
        <h1>Log in</h1>
    </div>

    <%= form_tag :action => 'process_login' do %>
        <p>
        <%= label_tag :username %><br />
        <%= text_field_tag :username, params[:username] %>
        </p>
        <p>
        <%= label_tag :password %><br />
        <%= password_field_tag :password %>
        </p>

        <%= submit_tag "Log in"%>
    <% end %>
    <a href="/"><button type='button'>Home</button></a>

</div>
